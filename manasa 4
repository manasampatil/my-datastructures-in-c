2.#include<stdio.h> 
int main() 
{ 
int num=10; 
int *ptr; 
ptr=&num; 
printf("value of num:%d\n",num); 
printf("Address of num:%p\n",&num); 
printf("value stored in pointer(address of num):%p\n",ptr); 
printf("value accessed through ptr(*ptr):%d\n",*ptr); 
return 0; 
}

3.#include<stdio.h> 
int main() 
{ 
int arr[5]={1, 2, 3, 4, 5}; 
int *ptr; 
ptr= arr; 
printf("Array elements using pointer:\n"); 
for(int i=0;i<5;i++) 
{ 
printf("%d",*(ptr+i)); 
} 
return 0; 
} 
