#include <stdio.h>
#include <stdlib.h>
typedef struct Node {
    int data;
    struct Node *next;
} Node;
Node* create_node(int data) {
    Node* new_node = malloc(sizeof(Node));
    if (!new_node) {
        perror("malloc failed");
        exit(1);
    }
    new_node->data = data;
    new_node->next = NULL;
    return new_node;
}
void append(Node **head, int data) {
    Node *new_node = create_node(data);
    if (*head == NULL) {
        *head = new_node;
        return;
    }
    Node *curr = *head;
    while (curr->next)
        curr = curr->next;
    curr->next = new_node;
}
void print_list(Node *head) {
    for (Node *curr = head; curr != NULL; curr = curr->next)
        printf("%d -> ", curr->data);
    printf("NULL\n");
}
void delete_kth_from_end(Node **head, int k) {
    if (!*head) return;

    Node *fast = *head, *slow = *head;
    Node *prev = NULL;
    for (int i = 0; i < k; i++) {
        if (!fast) return;  // k is larger than list size
        fast = fast->next;
    }
    if (!fast) {
        Node *temp = *head;
        *head = (*head)->next;
        free(temp);
        return;
    }
    while (fast->next) {
        fast = fast->next;
        prev = slow;
        slow = slow->next;
    }
    prev->next = slow->next;
    free(slow);
}
void free_list(Node *head) {
    Node *curr = head;
    while (curr) {
        Node *next = curr->next;
        free(curr);
        curr = next;
    }
}
int main() {
    Node *head = NULL;
    for (int i = 1; i <= 5; i++)
        append(&head, i * 10);
    printf("Original list:\n");
    print_list(head);
    int k = 2;
    printf("\nDeleting %d-th node from the end...\n", k);
    delete_kth_from_end(&head, k);
    printf("Updated list:\n");
    print_list(head);

    free_list(head);
    return 0;
}
