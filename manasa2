CALLOC

#include<stdio.h>
#include<stdlib.h>
int main()
{
        int *p;
        p=(int*)calloc(5,sizeof(int));
        for(int i=0;i<5;i++)
                printf("%d",p[i]);
        free(p);
        return 0;
}

REALLOC
#include<stdio.h> 
#include<stdlib.h> 
int main() 
{ 
        int *p; 
        p=(int*)malloc(2*sizeof(int)); 
        p[0]=10; 
        p[1]=20; 
        p=(int*)realloc(p,4*sizeof(int)); 
        p[2]=30; 
        p[3]=40; 
        for(int i=0;i<4;i++) 
                printf("%d",p[i]); 
        free(p); 
        return 0;
}
